#task1: check if the two strings start with the same letter
phrase1 = 'Clean Couch'
phrase2 = 'Giant Table'

list1 = [list(phrase1)]
list2 = [list(phrase2)]

if list1[0] in list2[0]:
    print ('yes')

else:
    print ('no')


#task2:return the strings with word reversed
my_string1 = 'This is a short phrase'
